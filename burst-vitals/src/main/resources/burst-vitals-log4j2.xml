<?xml version="1.0" encoding="UTF-8"?>
<!--This config used in the running system, not during tests-->
<Configuration status="info" packages="org.burstsys.vitals.logging" monitorInterval="30" >
    <Console name="console" target="SYSTEM_OUT">
        <PatternLayout pattern="%d{HH:mm:ss:SSS} [%-5p][%-37t] %m%n"/>
    </Console>
    <Loggers>
        <AsyncRoot level="${sys:burst.loglevel:-info}" includeLocation="true">
            <AppenderRef ref="console"/>
        </AsyncRoot>
        <AsyncLogger name="org.reflections" level="error"/>
        <AsyncLogger name="com.twitter" level="warn"/>
        <AsyncLogger name="com.twitter.finagle" level="warn"/>
        <AsyncLogger name="org.eclipse.jetty" level="error"/>
        <AsyncLogger name="org.glassfish.grizzly" level="warn"/>
    </Loggers>
</Configuration>



